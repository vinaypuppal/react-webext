{
  "name": "react-webext",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "run-p dev:*",
    "dev:stub": "esno scripts/stub.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --watch",
    "build": "run-s clear build:web build:js",
    "build:web": "vite build",
    "build:js": "tsup src/background --format iife --out-dir extension/dist --no-splitting",
    "clear": "rimraf extension/dist",
    "lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "lint:format": "prettier  --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "lint": "run-p lint:*"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@iconify/json": "^1.1.379",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.4.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "autoprefixer": "^10.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "esno": "^0.8.0",
    "fs-extra": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.7",
    "tsup": "^4.12.5",
    "typescript": "^4.3.5",
    "vite": "^2.4.3",
    "webextension-polyfill-ts": "^0.26.0"
  }
}
